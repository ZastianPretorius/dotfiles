[module/memory]
type = custom/script
exec = free | grep Mem | awk '{print int($3/$2 * 100.0)}'
format-prefix = " MEM "
format-suffix = "%"
format-foreground = ${colors.foreground-alt}
click-left = alacritty -e htop --sort-key=M_RESIDENT
tail = true

