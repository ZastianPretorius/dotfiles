[module/date]
type = internal/date
;date =    %%{F#99}%m/%d/%Y%%{F-}  %%{F#99}%I:%M %p%{F-}
;date-alt = %%{F#99}%A, %B %d, %Y  %%{F#99}%I:%M %p%{F#99}%%{F#99}%S%%{F-}
;interval = 5
date = %a %d,%b %Y
;date-alt = " %Y-%m-%d"
time = %I:%M %p
;time-alt = %H:%M:%S
;format-prefix = 
;format-prefix-foreground = ${colors.foreground}
;format-underline = #0a6cf5
label = %date%  %time%

